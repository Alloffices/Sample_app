
<%= form_for(resource_name, :url => user_registration_path || admin_registration_path) do |f| %>

  <%= devise_error_messages! %>
      <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading"><h2>Sign up</h2>
                    </div>
                    <div class="panel-body">
                        <form role="form">
                            <fieldset>
                                <div class="form-group">

    <%= f.text_field :name, autofocus: true, placeholder: "Name" , class: "form-control"  %>
                                </div>
                                <div class="form-group">

    <%= f.email_field :email, class: "form-control", placeholder: "Email"  %>
                                </div>
                                <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
                                </div>
                                <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Enter Password" , class: "form-control" %>
                                </div>
                                <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "form-control" %>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                    </label>
                                </div>
                                <div class="actions">
                                <%= f.submit "Sign up", class: "btn btn-lg btn-success btn-block"%>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>
