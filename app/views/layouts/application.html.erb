<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Nobbble.com</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <style>
  kin {
    color: #4b5569;
    font-family: 'Raleway', sans-serif;
    font-weight: 700;
    font-size: 19px;
  }
  </style>

  <%= csrf_meta_tags %>
</head>
<body>


    <!-- Second navbar for sign in -->
<nav class="navbar navbar-fixed-top navbar-default" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to "Nobbble", root_path, class: "navbar-brand" %>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <% if user_signed_in? %>
                <ul class="nav navbar-nav navbar-right">
                    <li class="round-image-50"><%= image_tag(current_user.image.url(:thumb)) %></li>
                    <% if current_user.try(:admin?) %>
                    <li>
                        <%= link_to current_user.name, "" %>
                    </li>
                    <% elsif current_user %>
                    <li>
                        <%= link_to current_user.name, profile_show_path %>
                    </li>
                    <% else %>
                    <% end %>
                    <li>
                        <%= link_to "", edit_user_registration_path, class: "glyphicon glyphicon-cog" %>
                    </li>
                    <li>
                      <%= link_to "", destroy_user_session_path, method: :delete, data: { confirm: "You want to logout?" }, class: "glyphicon glyphicon-log-out" %>
                    </li>
                </ul>
              <% else %>
                <ul class="nav navbar-nav navbar-right">
                    <li><%= link_to "Sign in", new_user_session_path %></li>
                    <li><%= link_to "Sign Up", new_user_registration_path, class: "button" %></li>
                </ul>
              <% end %>
            </div>
            <!-- /.navbar-collapse -->
        </div>
      </nav>
<div>
<%= yield %>
</div>

